// c program to count length of a last word of a sentence//
#include <stdio.h>
#include <string.h>
// cprogramm to count the length of last word in a sentence
int main()
{
    int count,c2=0;
    char sen[]="hello how are you india";
     int len=strlen(sen);
    for(int i=0;sen[i]!='\0';i++)
    {
        count++;
    }
    printf("\ntotal sentence length %d",count);
    for(int i=0;i<len;i++)
    {
     if(sen[i]==' ')
     {
      c2=0;
     }
     else
     {
      c2++;
     }
    }
    printf("\n len of last word %d",c2);

 
    return 0;
}
