#include <stdio.h>
int main()
{
    char *s = "geeksquiz";
    printf("%ld\n", sizeof(s));
    //s[0] = 'j';
    s="heloimran";
    s++;
    //reversing the string literals 
    for(int i=9;i>=0;i--)
    printf("%c", s[i]);
    return 0;
}

////reverse an array 

#include <stdio.h>
 
int main()
{
    int a[]={3,4,5,6,7};
    int n=5;
    int *p;
    p=&a[n];
    for(int i=0;i<n;i++)
    {
        printf("%d",*p--);
    }
 
    return 0;
}
